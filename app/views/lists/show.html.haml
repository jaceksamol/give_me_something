%h1 
  #{list.name}
%br

.input-group
  %span.input-group-addon Make your friends buy your stuff. Spam with this link
  %input.form-control.code{ value: list_path(list, only_path: false) }

%table.table.table-hover
  %tr
    %th Name
    %th Description
    %th Where to buy?
    %th Actions


  - gifts.each do |gift|
    %tr{class: gift.css_available_class}
      %td
        %span.glyphicon.glyphicon-gift{ style: 'margin-right: 5px' }
        = link_to "#{gift.name}", gift_path(gift), :method => :get
      %td
        = link_to gift.short_description, gift_path(gift)
      %td
        %a.gift-search-icon{ href: gift.allegro_url, target: '_blank', title: 'Search in allegro' }
          =image_tag('allegro.ico')
        %a.gift-search-icon{ href: gift.ebay_url, target: '_blank', title: 'Search in ebay' }
          =image_tag 'ebay.ico'
        %a.gift-search-icon{ href: gift.amazon_url, target: '_blank', title: 'Search in amazon' }
          =image_tag 'amazon.gif'
        %a.gift-search-icon{ href: gift.google_url, target: '_blank', title: 'Search in google' }
          =image_tag 'google.png'
      %td
        .btn-group{:role => "group"}
          - if gift.listed_by?(current_user)   
            / = link_to 'Edit', edit_gift_path(gift), :class => "btn btn-primary", :method => :get
            = link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"
          - elsif gift.can_be_reserved_by?(current_user)
            = link_to "Buy", toggle_buyer_gift_path(gift), :method => :post, :class => "btn btn-primary"
          - elsif gift.reserved_by?(current_user)
            = link_to "Resign", toggle_buyer_gift_path(gift), :method => :post, :class => "btn btn-danger"
        - if gift.listed_by?(current_user)
          - if gift.bought?
            Bought by
            = gift.buyer.name



=link_to "Edit Your List", edit_list_path(list), :class => "btn btn-primary btn-lg"
      
